{
  "name": "pro-life",
  "version": "1.3.0",
  "description": "待办事项与记账应用 - 增强体验版：键盘快捷键、动画效果、子任务折叠",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win --publish never",
    "build:portable": "electron-builder --win portable --publish never",
    "build:dir": "electron-builder --dir --publish never"
  },
  "keywords": [
    "todo",
    "finance",
    "productivity"
  ],
  "author": "Pro Life",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-packager": "^17.1.2"
  },
  "build": {
    "appId": "com.prolife.app",
    "productName": "Pro Life",
    "directories": {
      "output": "dist"
    },
    "files": [
      "index.html",
      "main.js",
      "package.json"
    ],
    "win": {
      "target": [
        "portable",
        "dir"
      ],
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "@capacitor/android": "^8.0.0",
    "@capacitor/app": "^8.0.0",
    "@capacitor/cli": "^8.0.0",
    "@capacitor/core": "^8.0.0"
  }
}
